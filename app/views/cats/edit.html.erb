<h1> Cat form! </h1>
<form action="<%= cats_url %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="cat_name">First name </label>
  <input name="cat[name]" id="cat_name" type="text" value="<%=@cat.name%>">
  <br>

  <label for="male">Male</label>
  <input name="cat[sex]" id="male" type="radio" value="M" <%="checked" if @cat.sex == 'M' %>>
  <label for="female">Female</label>
  <input name="cat[sex]" id="female" type="radio" value="F" <%="checked" if @cat.sex == 'F' %>>
  <br>

  <label for="cat_color">Color</label>
  <select name="cat[color]">
    <% Cat::COLOR.each do |color| %>
      <option value="<%=color%>" <%="selected" if @cat.color == color%>>
        <%=color.capitalize%>
      </option>
    <%end%>
    <!-- <option value="blue">Blue</option>
    <option value="green">Green</option>
    <option value="yellow">Yellow</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="brown">Brown</option>
    <option value="orange">Orange</option> -->
  </select>
  <br>

  <label for="cat_birth_date">Birth date</label>
  <input name="cat[birth_date]" id="cat_birth_date" type='date' value="<%=@cat.birth_date%>" >
  <br>

  <label for="cat_description">Describe your memories!</label>
  <input name="cat[description]" id="cat_description" type="textarea" value="<%=@cat.description%>">
  <br>

  <input type="submit" value="Make cat!">
</form>

<%= link_to "Back", :back %>

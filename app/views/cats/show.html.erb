<h1><%= @cat.name %></h1>

<table border = "1">
  <% @cat.attributes.each do |key, value| %>
  <tr>
    <td> <strong><%= key %></strong> </td>
    <td> <%= value %> </td>
  </tr>
  <% end %>
</table>

<br>
<br>
<%= link_to "Edit", edit_cat_url %>
<%= link_to "Back", :back %>
<%= link_to "Index", cats_url %>

<% @cat.cat_rental_requests.each do |request| %>
  <table border = "1">
    <% request.attributes.each do |key, value| %>
    <tr>
      <td> <strong><%= key %></strong> </td>
      <td> <%= value %> </td>
    </tr>
    <% end %>
  </table>
  <%= button_to "Approve", approve_cat_cat_rental_request_path(request.cat_id, request.id) %>
<% end %>

<br>
<br>
